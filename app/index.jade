doctype html
html
  head
    meta(charset="utf8")
    script(type="text/javascript").
      (function(){
        var lang = window.navigator.userLanguage || window.navigator.language;
        if(lang === 'zh-TW') {
          if(window.location.pathname.match(/^\/(\w+\.html)$/)) {
            location.href = '/zh-TW' + window.location.pathname;
          } else {
            location.href = '/zh-TW/index.html';
          }
        } else {
          location.href = '/en-US/index.html';
        }
      }())
  body
