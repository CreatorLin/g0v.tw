doctype html
html
  head
    meta(charset="utf8")
    script(type="text/javascript").
      (function(){
        var source
          , lang = window.navigator.userLanguage || window.navigator.language;
        if(lang === 'zh-TW') {
          if(source = window.location.pathname.match(/^\/(\w+\.html)$/)) {
            location.href = '/zh-TW/' + source[1];
          } else {
            location.href = '/zh-TW/index.html';
          }
        } else {
          location.href = '/en-US/index.html';
        }
      }())
  body
